# Inspire Backend - Environment Variables
# Copy this file to .env and fill in your API keys

# ===========================================
# Word & Phrase Generation APIs
# ===========================================

# Datamuse API - No key required
# Free tier: 100,000 requests/day
DATAMUSE_API_URL=https://api.datamuse.com

# Random Word API - No key required
RANDOM_WORD_API_URL=https://random-word-api.herokuapp.com

# Free Dictionary API - No key required
DICTIONARY_API_URL=https://api.dictionaryapi.dev

# ===========================================
# Meme & Image Inspiration APIs
# ===========================================

# Imgflip API - Supply username + password for caption endpoint
IMGFLIP_API_URL=https://api.imgflip.com
IMGFLIP_USERNAME=your_imgflip_username
IMGFLIP_PASSWORD=your_imgflip_password

# Unsplash API - Requires free API key
# Sign up at: https://unsplash.com/developers
# Free tier: 50 requests/hour
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
UNSPLASH_API_URL=https://api.unsplash.com

# Reddit API - No key required for basic JSON access
REDDIT_API_URL=https://www.reddit.com

# ===========================================
# Emotion & Mood Data APIs
# ===========================================

# Hugging Face Inference API - Requires free API key
# Sign up at: https://huggingface.co/settings/tokens
# Free tier with rate limits
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_API_URL=https://api-inference.huggingface.co

# Default emotion detection model
HUGGINGFACE_EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base

# ===========================================
# Audio Samples & Loops APIs
# ===========================================

# Freesound API - Requires free API key
# Sign up at: https://freesound.org/apiv2/apply/
# Free tier: 60 requests/minute
FREESOUND_API_KEY=your_freesound_api_key_here
FREESOUND_API_URL=https://freesound.org/apiv2

# Jamendo API - Requires free client ID
# Sign up at: https://developer.jamendo.com/
JAMENDO_CLIENT_ID=your_jamendo_client_id_here
JAMENDO_API_URL=https://api.jamendo.com/v3.0

# Piped API - Lightweight YouTube proxy (no key required)
PIPED_API_URL=https://piped.video/api/v1

# ===========================================
# Topic & Trend Data APIs
# ===========================================

# NewsAPI - Requires free API key
# Sign up at: https://newsapi.org/register
# Free tier: 100 requests/day
NEWS_API_KEY=your_news_api_key_here
NEWS_API_URL=https://newsapi.org/v2

# ===========================================
# Randomization Utilities
# ===========================================

# BoredAPI - No key required
BORED_API_URL=https://www.boredapi.com/api

# Random Data API - No key required
RANDOM_DATA_API_URL=https://random-data-api.com/api

# ===========================================
# General Configuration
# ===========================================

# Enable/disable API fallbacks to mock data
USE_MOCK_FALLBACK=false

# Cache duration in seconds (default: 3600 = 1 hour)
API_CACHE_DURATION=3600

# Enable API request logging
LOG_API_REQUESTS=false
